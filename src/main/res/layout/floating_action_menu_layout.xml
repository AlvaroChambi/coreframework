<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf = "parent"
        app:layout_constraintBottom_toBottomOf = "parent"
        android:layout_margin="0dp"
        android:id="@+id/floating_menu_background"
        android:background="@color/text_gray"
        android:alpha="0.6"
        android:visibility="gone">
    </ImageView>
    <es.developer.achambi.coreframework.ui.FloatingTextButton
        android:id="@+id/configuration_floating_save_button_middle"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/configuration_floating_save_button_main"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/configuration_floating_save_button_main"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/configuration_floating_save_button_main"
        app:text="Both"
        android:visibility="invisible">
    </es.developer.achambi.coreframework.ui.FloatingTextButton>

    <es.developer.achambi.coreframework.ui.FloatingTextButton
        android:id="@+id/configuration_floating_save_button_left"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/configuration_floating_save_button_middle"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_floating_save_button_middle"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/configuration_floating_save_button_middle"
        android:layout_marginEnd="8dp"
        app:text="Left"
        android:visibility="gone">
    </es.developer.achambi.coreframework.ui.FloatingTextButton>

    <es.developer.achambi.coreframework.ui.FloatingTextButton
        android:id="@+id/configuration_floating_save_button_right"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal|bottom"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_floating_save_button_middle"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/configuration_floating_save_button_middle"
        app:layout_constraintTop_toTopOf="@+id/configuration_floating_save_button_middle"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        app:text="Right">
    </es.developer.achambi.coreframework.ui.FloatingTextButton>

    <es.developer.achambi.coreframework.ui.FloatingTextButton
        android:id="@+id/configuration_floating_save_button_main"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:text="@string/configuration_save_action_text">
    </es.developer.achambi.coreframework.ui.FloatingTextButton>


</merge>