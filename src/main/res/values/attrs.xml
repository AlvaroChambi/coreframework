<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HeaderViewAttr">
        <attr name="main_title" format="string" />
    </declare-styleable>

    <declare-styleable name="HeaderView">
        <attr name="headerViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="StatEVView">
        <attr name="stat_type" format="enum">
            <enum name="hp" value="0"/>
            <enum name="attack" value="1"/>
            <enum name="defense" value="2"/>
            <enum name="spAttack" value="3"/>
            <enum name="spDefense" value="4"/>
            <enum name="speed" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FloatingTextButton">
        <attr name="text" format="string"/>
    </declare-styleable>

    <declare-styleable name="ConfigurationView">
        <attr name="configTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PokemonView">
        <attr name="pokemonTextColor" format="color"/>
    </declare-styleable>
</resources>